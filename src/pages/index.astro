---
import Layout from "../layouts/Layout.astro";

const response = await fetch(`${import.meta.env.GRAPHQL_ENDPOINT}`, {
  method: "POST",
  headers: { "Content-Type": "application/json" },
  body: JSON.stringify({
    query: `
      {
         mediaItem(id: "fisheye1", idType: SLUG) {
            altText
            sourceUrl
            title
         }
      }
   `,
  }),
});

const hero = await response.json();

const { altText } = hero.data.mediaItem;
const { sourceUrl } = hero.data.mediaItem;
---

<Layout title="Another country">
  <h1 class="text-center">Another Country</h1>
  <img class="w-full" src={sourceUrl} alt={altText} />
</Layout>
