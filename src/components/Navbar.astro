---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { Image } from "astro:assets";
import favicon from "../images/favicon.png";

interface Props {
  pages: PageItem[];
}
const { pages } = Astro.props as Props;
---

<header class="flex flex-col lg:flex-row justify-between items-center my-5 text-base">
  <Astronav>
    <div class="flex w-10/12 md:w-full lg:w-auto items-center justify-between">
      <a class="inline-flex items-center no-underline" href="/" title="Home">
        <Image class="size-10 md:size-14" src={favicon} alt="" loading="eager" />
        <span class="ml-4 font-semibold">Another Country</span>
      </a>
      <div class="flex lg:hidden">
        <MenuIcon class="w-6 h-6 text-gray-800" />
      </div>
    </div>
    <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
      <ul class="flex flex-col lg:flex-row lg:gap-3 list-none">
        <li>
          <a
            href="/"
            class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900 no-underline">
            <span>Home</span>
          </a>
        </li>
        {
          pages.map((page) => (
          <li>
            <a
            href=`/${page.slug}`
            class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900 no-underline">
            <span>{page.title}</span>
            </a>
          </li>
          ))
        }
        <li>
          <a
            href="/blog"
            class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900 no-underline">
            <span>Blog</span>
          </a>
        </li>
      </ul>
    </MenuItems>
  </Astronav>
</header>